<h1>Edit Atlanta <%= @team.team_name %></h1>

<form action="/teams/edit" method="post">
	<label>Name: <input type="text" name="team_name" value="<%= @team.team_name %>"></label><br>
	<label>Sport: <input type="text" name="sport" value="<%= @team.sport %>"></label><br>
	<label>Logo: <input type="url" name="logo_url" value="<%= @team.logo_url %>"></label><br>
	<img class="profile" id="preview" src="<%= @team.logo_url %>"><br>
	<input type="hidden" name="id" value="<%= @team.id %>">
	<input type="submit" value="Submit Changes">
</form>