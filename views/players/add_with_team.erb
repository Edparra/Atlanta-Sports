<h1>Add Player</h1>

<form action="/players/add" method="post">
	<label>Team:
		<select name="team_id">
			<% @teams.each do |team| %>
				<option value="<%= team.id %>"><%= team.team_name %></option>
			<% end %>
		</select>
	</label><br>
	<label>Name: <input type="text" name="name"></label><br>
	<label>Age: <input type="number" name="age"></label><br>
	<label>Position: <input type="text" name="position"></label><br>
	<label>Picture: <input type="url" name="pic_url"></label><br>
	<img class="profile" id="preview" src=""><br>
	<input type="hidden" name="redirect" value="/players">
	<input type="submit" value="Add Player">
</form>